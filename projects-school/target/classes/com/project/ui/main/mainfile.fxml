<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.ui.main.MainFxmlController">
   <children>
      <Label alignment="BOTTOM_CENTER" text="Добро пожаловать в программу!">
         <font>
            <Font name="Corbel Light Italic" size="25.0" />
         </font>
      </Label>
      <HBox prefHeight="370.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
         <children>
            <VBox alignment="CENTER" prefHeight="375.0" prefWidth="210.0" spacing="30.0">
               <children>
                  <TextField fx:id="idField" promptText="ID устройства">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="nameField" promptText="Имя устройства">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="typeField" promptText="Тип устройства">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
                  <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAddButtonClick" prefHeight="44.0" prefWidth="118.0" style="-fx-background-color: linear-gradient(blue,black);" text="Добавить" textFill="WHITE">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="changeButton" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#onChangeButtonClick" style="-fx-background-color: linear-gradient(blue,black);" text="Изменить" textFill="WHITE">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
                  <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDeleteButtonClick" prefHeight="25.0" prefWidth="115.0" style="-fx-background-color: linear-gradient(blue,black);" text="Удалить" textFill="WHITE">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
